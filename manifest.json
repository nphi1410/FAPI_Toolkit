{
  "manifest_version": 3,
  "name": "FAPI",
  "description": "Beauty FAP Website",
  "version": "1.0",
  "action": {
    "default_icon": "icon.png"
  },
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "./script/background.js"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "content_scripts": [
    {
      "js" : ["script/content.js"],
      "css": ["MyStyle/myStyle.css", "MyStyle/main.css"],
      "matches": [
        "https://fap.fpt.edu.vn/*"
      ]
    }
  ]
}